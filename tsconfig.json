{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es5",
      "es6",
      "es2017"
    ],
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "spec/"
  ]
}